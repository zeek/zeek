FROM alpine:latest

RUN apk add --no-cache \
  cmake \
  make \
  g++ \
  python3 \
  python3-dev \
  flex-dev \
  bison \
  libpcap-dev \
  openssl-dev \
  zlib-dev \
  swig \
  bash \
  bsd-compat-headers \
  linux-headers \
  fts-dev \
  git \
  curl \
  openssh-client \
  py3-pip

RUN pip3 install junit2html
