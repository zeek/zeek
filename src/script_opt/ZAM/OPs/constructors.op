macro GenInits()
	std::vector<std::optional<ZVal>> init_vals = Z_AUX->ToZValVecWithMap(frame);
	for ( const auto& [idx, field_init] : *Z_AUX->field_inits )
		init_vals[idx] = field_init->Generate();

